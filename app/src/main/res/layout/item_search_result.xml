<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="8dp"
  android:paddingEnd="@dimen/activity_horizontal_margin"
  android:paddingStart="@dimen/activity_horizontal_margin"
  android:paddingTop="8dp">

  <ImageView
    android:id="@+id/item_search_result_favicon"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:contentDescription="@string/favicon"
    app:layout_constraintEnd_toStartOf="@id/item_search_result_title"
    app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@mipmap/kiwix_icon" />

  <TextView
    android:id="@+id/item_search_result_title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:textAppearance="?android:attr/textAppearanceMedium"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/item_search_result_favicon"
    app:layout_constraintTop_toTopOf="@id/item_search_result_favicon"
    tools:text="Wikipedia" />

  <TextView
    android:id="@+id/item_search_result_description"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@id/item_search_result_title"
    app:layout_constraintTop_toBottomOf="@id/item_search_result_title"
    tools:text="Encyclopedia" />

  <TextView
    android:id="@+id/item_search_result_content"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textColor="@color/secondary_text"
    app:layout_constraintEnd_toEndOf="@id/item_search_result_description"
    app:layout_constraintStart_toStartOf="@id/item_search_result_description"
    app:layout_constraintTop_toBottomOf="@id/item_search_result_description" />
</android.support.constraint.ConstraintLayout>